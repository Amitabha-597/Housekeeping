<view class="orderdetails">
	<view class="orderdetailsline"></view>
	<view class="orderdetailsA">
		<view class="orderdetailsAtit">
			商品清单
		</view>
		<view class="orderdetailsAmsg">
			<view class="orderdetailsimga">
			</view>
			<view class="orderdetailsAcontent">
				<view class="orderdetailsAcontenta">{{orderinfo.title}}</view>
				<view class="orderdetailsAcontentb">{{orderinfo.shop.shop_name}}</view>
				<view class="orderdetailsAcontentc"><text style=" margin-right: 20rpx;">{{orderinfo.tag}}</text> <text>{{orderinfo.shop.area}}</text></view>

			</view>
		</view>
		<view class="remarks">
			<text>备注：</text>
			<text>{{orderinfo.remark}}</text>
		</view>
	</view>
	<view class="orderdetailsline"></view>
	<view class="orderdetailsB">
		<view class="orderdetailsAtit">
			客户基本信息
		</view>
		<view class="orderdetailsBcontent">

			<view class="orderdetailsBcontentimg">
      <image style="width:100%;height:100%;" src="{{orderinfo.avatar_url}}"> </image>
      </view>
			<view class="orderdetailsBcontenmsg">
				<view>
					<text style="color:#999999">姓名</text>
					<text style="color:#222">{{orderinfo.contacts}}</text>
				</view>
				<view>
					<text style="color:#999999">联系电话</text>
					<text style="color:#222">{{orderinfo.mobile}}</text>
				</view>
				<view>
					<text style="color:#999999">预约上门时间</text>
					<text style="color:#222">{{orderinfo.subscribe_time}}</text>
				</view>

			</view>


		</view>
		<view class="orderdetailsBadress">
			<text>服务地址：</text>
			<text>{{orderinfo.address}}</text>
		</view>
	</view>
	<view class="orderdetailsline"></view>

	<view class="orderdetailsC">
		<view class="orderdetailsAtit">
			客户基本信息
		</view>
		<view class="orderdetailsConent">
			<text style="color:#6B6B6B">订单编号</text>
			<text style="color:#333333">{{orderinfo.order_no}}</text>
		</view>
		<view class="orderdetailsConent" style=" margin-top: 25rpx;">
			<text style="color:#6B6B6B">创建时间</text>
			<text style="color:#333333">{{orderinfo.create_time}}</text>
		</view>
	</view>












</view>