.order {
  width: 100%;
  padding-top: 100rpx;
  padding-bottom: 130rpx;
}




.title {
 position: fixed;
 left: 0;
 top: 0;
 z-index: 999;
  width: 100%;
  height: 73rpx;
  background: white;
  display: flex;
  align-items: center;
  justify-content: space-around;
  border-bottom: 12rpx solid #F2F2F2;
}

.titleSel {
  height: 70rpx;
  width: 20%;
  color: #666666;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-family: PingFang SC;
  font-weight: bold;
}

.titleSel_name {
  height: 70rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  font-weight: 400;
  justify-content: center;
}

.headerLineSel {
  background: #EC8401;
  height: 10rpx;
  width: 53rpx;
  position: relative;
}

.headerLineUnsel {
  background: #fff;
  height: 10rpx;
  width: 53rpx;
  position: relative;
}

.swiper {
  width: 100%;
  flex: 1;
  height: 100vh;
  overflow: scroll;
  background: #F2F2F2;

}








.orderItem {
  width: 100%;
  height: 500rpx;
  background: #fff;
}

.orderItemTitle {
  box-sizing: border-box;
  width: 100%;
  height: 84rpx;
  border-bottom: 1rpx solid #f1f2f2;
  padding: 0 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 30rpx;
  font-family: SimHei;
  font-weight: 400;
  color: rgba(34, 34, 34, 1);
}

.orderItemconect {
  width: 100%;
  height: 220rpx;
  border-bottom: 1rpx solid #f1f2f2;
  display: flex;
  align-items: center;
  justify-content: center;
  font-family: SimHei;
  font-weight: 400;
}

.orderItemconectimg {
  width: 160rpx;
  height: 160rpx;
}

.orderItemconectmsg {
  width: 439rpx;
  margin-left: 30rpx;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.orderItemconectmsgtitle {
  width: 100%;
  font-size: 30rpx;
  color: rgba(34, 34, 34, 1);
}

.orderItemconectmsgCompany {
  font-size: 22rpx;
  color: rgba(153, 153, 153, 1);
  justify-content: space-between;
  align-items: center;
  display: flex;
}

.orderItemconectmsgdate {
  font-size: 22rpx;
  color: rgba(153, 153, 153, 1);
  justify-content: flex-start;
  align-items: center;
  display: flex;
}
.orderItemadress{
  box-sizing: border-box;
  padding:0 40rpx ;
  height: 105rpx;
  width: 100%;
  border-bottom: 1rpx solid #f1f2f2;
  font-size:24rpx;
  font-family:SimHei;
  font-weight:400;
  color:rgba(118,118,118,1);
  display: flex;
  align-items: center;
  justify-content: flex-start;
  line-height:40rpx;
}
.orderItemBtn{
  padding: 0 40rpx;
  box-sizing: border-box;
  width: 100%;
  height: 85rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.orderItemBtn>view{
  width: 128rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  font-size:24rpx;
}
.orderItemBtnA{
  border: 1rpx solid #f1f1f2;
  color:#767676 ;
}
.orderItemBtnB{
  border: 1rpx solid #EC8401;
  margin-left: 30rpx;
  color: #EC8401;

}